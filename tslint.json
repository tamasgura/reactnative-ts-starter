{
    "defaultSeverity": "error",
    "extends": [
        "tslint:recommended",
        "tslint-config-standard",
        "tslint-config-airbnb",
        "tslint-react",
        "tslint-config-prettier"
    ],
    "linterOptions": {
        "exclude": [
            "src/store/**/*"
        ]
    },
    "jsRules": {},
    "rules": {
        "import-name": [true, {
            "lodash": "_",
            "react": "React",
            "Ionicons": "Icon",
            "reactNativeI18n": "i18n",
            "configureStore": "store"
        }],
        "ordered-imports": false,
        "object-literal-sort-keys": false,
        "member-ordering": [
            true,
            {
                "order": [
                    "public-static-field",
                    "public-instance-field",
                    "public-static-method",
                    "public-instance-method"
                ]
            }
        ],
        "jsx-no-lambda": false,
        "jsx-boolean-value": false,
        "space-before-function-paren": false,
        "member-access": [true, "no-public"],
        "trailing-comma": [
            true,
            {
                "multiline": {
                    "objects": "always",
                    "arrays": "always",
                    "functions": "never",
                    "typeLiterals": "ignore"
                }
            }
        ],
        "triple-equals": [
            true,
            "allow-null-check"
        ],
        "semicolon": [true, "never", "ignore-interfaces"],
        "variable-name": [true, "allow-pascal-case"]
    }
}
